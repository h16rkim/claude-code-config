{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "USE_BUILTIN_RIPGREP": "1",
    "ENABLE_LSP_TOOL": "1",
    "HTTP_PROXY": "http://127.0.0.1:3128",
    "HTTPS_PROXY": "http://127.0.0.1:3128"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(./gradlew:*)"
    ],
    "deny": [
      "Read(node_modules/)",
      "Read(**/build/)",
      "Read(**/bin/)",
      "Read(**/dist/)",
      "Read(**/.env)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'User input required'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Request finished'"
          }
        ]
      }
    ],
    "PreToolUse": []
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/custom/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "git-workflow@inflab": true,
    "typescript-lsp@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "kotlin-lsp@claude-plugins-official": true,
    "agent-rules@inflab": true
  },
  "language": "한국어",
  "alwaysThinkingEnabled": true,
  "disableBypassPermissionsMode": true
}
